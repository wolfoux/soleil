{% extends "::SousSite/base.html.twig" %}

{#DESCRIPTION :       
  page des realisations

    Nom du Bundle: soleilArticleBundle
    Controller: Realisation
    Action    : index
    ----------------------------------------------

    A INTEGRER : 
        extends "::SousSite/base.html.twig"

    POUR LE LIENS:
    Route: soleil_realisation_accueil
          

    VARIABLES DISPONIBLES:
        - realisation: array :  realisation
                     propriétés : id, titreFr, titreEn,textFr; textEn, slug, dimension, prix, vendu, realiserpar, image_id
    ----------------------------------------------                
    POUR TESTER : www.eft.com/realisation
    ----------------------------------------------
#}




{% block content %}
  
<section id="etage2" class="alignement_etage2">
	<section id="contenu" class="container">

		<section id="articles_avec-realisations" class="grid_12 alpha omega">
			<h2>Nos réalisations</h2>

			<section id="big-realisations">
		            
                            {% set i = 1 %}
                            
                            {% for r in realisation %}
                            
                                {% if i==5 %} {% set i = 1 %} {% endif %}
                            
				<div class="doubleArticle">
                                    {% if loop.index is divisibleby(3) %}
                                        <article class="grid_3_realisations realisation{{i}} ecran2RealisationUnique ">
                                    {% else %}
                                        <article class="grid_3_realisations realisation{{i}} ecran2Realisation">
                                    {% endif %}
					
					
						<h3>{{ r.titreFr}}</h3>
						<figure>
							
                                                        <img
                                                        src="{{ asset(r.image.webPath) }}"
                                                        alt="{{ r.titreFr}}" class="taillePetitImage"
                                                        />
                                                        
						</figure>
						<div>
							<p><strong>Dimensions :</strong> {{ r.dimension }}</p>
							<p><strong>Réalisé par :</strong> {{ r.realiserpar }}</p>
							<p class="alignePrix">{{ r.prix }}</p>
                                                        {% if r.vendu == 0 %}
							   <p class="bouton"><a href="{{ path('soleil_realisation_paiement_details',{'slug_r':r.slug}) }}">Acheter</a></p>
                                                        {% else %}
                                                           <p class="boutonVendu"><a>Vendu</a></p>
                                                        {% endif %}
						</div>
					
					</article>
