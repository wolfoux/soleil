{% extends "::SousSite/Admin/baseAdmin.html.twig" %}

{% block content %}

    <div class="row">
        
          <div class="col-lg-12">
            <h1>Commande - voir</h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('soleil_sous_site_accueil_admin') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
              <li><a href="{{ path('soleil_commande_accueil_admin') }}"><i class="fa fa-table"></i> Commande</a></li>
              <li class="active"><i class="fa fa-table"></i> Voir</li>
            </ol>
          </div>
        
  </div><!-- /.row -->

  <div class="row">
      
          <div>
            
            <h3>Informations commande</h3>
                      
            <div class="table-responsive">
              <table class="table table-hover table-striped ">
                  
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Commande</th>
                    <th>Prix</th>
                    <th>Dimension</th>
                    <th>Réalisé par</th>
                    
                  </tr>
                </thead>
                
                <tbody>
                        <tr>
                            <td>{{ cli.dateIns|date('d-m-Y')}}</td>
                            <td>{{cli.realisation.titreFr }}</td>
                            <td>{{ cli.realisation.prix }} EUR</td>
                            <td>{{ cli.realisation.dimension }}</td>
                            <td>{{ cli.realisation.realiserpar }}</td>
                        </tr> 
                </tbody>
                
              </table>
            </div>   
            
          </div>
      
        </div><!-- /.row -->
        
        <div class="row">
      
          <div>
            
            <h3>Informations client</h3>
                      
            <div class="table-responsive">
              <table class="table table-hover table-striped ">
                  
                <thead>
                  <tr>
                    <th>Numéro unique</th>
                    <th>Nom</th>
                    <th>Tel</th>
                    <th>Mail</th>
                    <th>Date de Naissance</th>
                    <th>Moyen de payement</th>
                    
                    {% if cli.moyenpayement == "PayPal" %}
                        <th>Numero de transaction</th>
                    {% endif %}
                            
                  </tr>
                </thead>
                
                <tbody>
                        <tr>
                            <td>{{ cli.numInscrit }}</td>
                            <td>{{cli.genre}} {{cli.nom}}</td>
                            <td>{{cli.tel }}</td>
                            <td>{{ cli.mail }} EUR</td>
                            <td>{{ cli.datenaissance|date('d-m-Y') }}</td>
                            <td>{{ cli.moyenpayement }}</td>
                            
                            {% if cli.moyenpayement == "PayPal" %}
                                <td>{{ cli.numTrans }}</td>
                            {% endif %}
                            
                        </tr> 
                </tbody>
                
              </table>
            </div>   
            
          </div>
      
        </div><!-- /.row -->
      
        <div class="row">
          <div>
              
            <h3>Addresses de livraison</h3>
            <address>
              <strong>{{cli.genre}} {{cli.nom}}</strong><br>
              {{cli.adresse}}<br>
              {{cli.cp }} {{cli.ville }} {{cli.etatprov }} {{cli.pays }}<br/>

            </address>
           
          </div>
         </div><!-- /.row -->


{% endblock %}