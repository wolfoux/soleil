{% extends "::SousSite/Admin/baseAdmin.html.twig" %}

{% block content %}

    <div class="row">
        
          <div class="col-lg-12">
            <h1>Commande</h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('soleil_sous_site_accueil_admin') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
              <li class="active"><i class="fa fa-table"></i> Commande</li>
            </ol>
          </div>
        
  </div><!-- /.row -->
  
  <div class="row">
      
        <div class="col-lg-6">
            
            <h2>Listes des commandes</h2>
                      
            <div class="table-responsive">
              <table class="table table-hover tablesorter "> 
                  
                <thead>
                  <tr>
                    <th>Date commande</th>
                    <th>Commander par</th>
                    <th>Objet</th>
                    <th>Numero unique</th>
                    <th></th>
                  </tr>
                </thead>
                
                <tbody>

                   {% for c in commande %}
                        
                        {% if c.lu == 0 %}
                    
                            <tr class="active">
                                <td><strong>{{ c.dateIns|date('d-m-Y')}} {{ c.dateIns|date("H:i:s")}}</strong></td>
                                <td><a href="{{ path('soleil_commande_voir_admin', {'slug': c.slug} ) }}">{{ c.genre }} {{ c.nom }}</a></td>
                                <td>{{ c.realisation.titreFr }}</td>
                                <td>{{ c.numInscrit }}</td>
                                <td><a href="{{ path('soleil_commande_supprimer_admin', {'slug': c.slug} ) }}">Supprimer</a></td>
                            </tr>
                        
                        {% endif %}
                        
                   {% endfor %}
                            
                   {% for c in commande %}
                        
                        {% if c.lu == 1 %}
                    
                            <tr>
                                <td>{{ c.dateIns|date('d-m-Y')}} {{ c.dateIns|date("H:i:s")}}</td>
                                <td><a href="{{ path('soleil_commande_voir_admin', {'slug': c.slug} ) }}">{{ c.genre }} {{ c.nom }}</a></td>
                                <td>{{ c.realisation.titreFr }}</td>
                                <td>{{ c.numInscrit }}</td>
                                <td><a href="{{ path('soleil_commande_supprimer_admin', {'slug': c.slug} ) }}">Supprimer</a></td>
                            </tr>
                        
                        {% endif %}
                        
                   {% endfor %}
                        
                  
                </tbody>
                
              </table>
            </div>   
            
          </div>
      
        </div><!-- /.row -->

{% endblock %}