{% extends "::SousSite/Admin/baseAdmin.html.twig" %}

{% block content %}

    <div class="row">

              <div class="col-lg-12">
                <h1>Agenda</h1>
                <ol class="breadcrumb">
                  <li><a href="{{ path('soleil_sous_site_accueil_admin') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
                  <li><a href="{{ path('soleil_agenda_accueil_admin') }}"><i class="fa fa-dashboard"></i> Agenda</a></li>
                  <li class="active">Supprimer un évènement</li>
                </ol>
              </div>

      </div><!-- /.row -->

    <p>
    Etes-vous certain de vouloir supprimer cette évènement "{{
    ev.nom }}" ?
    </p>

    <form action="{{ path('soleil_agenda_evenement_supprimer', {'slug_ev': ev.slug}) }}" method="post">

    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
    </form>
    
{% endblock %}