{% extends "::SousSite/Admin/baseAdmin.html.twig" %}

{% block content %}

    <div class="row">
        
          <div class="col-lg-12">
            <h1>Inscription - voir</h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('soleil_sous_site_accueil_admin') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
              <li><a href="{{ path('soleil_agenda_inscription_admin') }}"><i class="fa fa-table"></i> Inscription</a></li>
              <li class="active"></i> Voir</li>
            </ol>
          </div>
        
  </div><!-- /.row -->

  <div class="row">
      
          <div>
            
            <h3>Informations inscription</h3>
                      
            <div class="table-responsive">
              <table class="table table-hover table-striped ">
                  
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Evenement</th>
                    <th>Prix</th>
                    <th>Date début</th>
                    <th>Date fin</th>
                    
                  </tr>
                </thead>
                
                <tbody>
                        <tr>
                            <td>{{ i.dateIns|date('d-m-Y')}}</td>
                            <td>{{ i.evenementAgenda.nomFr }}</td>
                            <td>{{ i.evenementAgenda.prix }} EUR</td>
                            <td>{{ i.evenementAgenda.dateDeb|date('d-m-Y') }}</td>
                            <td>{{ i.evenementAgenda.dateFin|date('d-m-Y') }}</td>
                        </tr> 
                </tbody>
                
              </table>
            </div>   
            
          </div>
      
        </div><!-- /.row -->
        
        <div class="row">
      
          <div>
            
            <h3>Informations client</h3>
                      
            <div class="table-responsive">
              <table class="table table-hover table-striped ">
                  
                <thead>
                  <tr>
                    <th>Numéro unique</th>
                    <th>Nom</th>
                    <th>Tel</th>
                    <th>Mail</th>
                    <th>Date de Naissance</th>
                    <th>Moyen de payement</th>
                    
                    {% if i.moyenpayement == "PayPal" %}
                        <th>Numero de transaction</th>
                    {% endif %}
                            
                  </tr>
                </thead>
                
                <tbody>
                        <tr>
                            <td>{{ i.numInscrit }}</td>
                            <td>{{i.genre}} {{i.nom}}</td>
                            <td>{{i.tel }}</td>
                            <td>{{ i.mail }} EUR</td>
                            <td>{{ i.datenaissance|date('d-m-Y') }}</td>
                            <td>{{ i.moyenpayement }}</td>
                            
                            {% if i.moyenpayement == "PayPal" %}
                                <td>{{ i.numTrans }}</td>
                            {% endif %}
                            
                        </tr> 
                </tbody>
                
              </table>
            </div>   
            
          </div>
      
        </div><!-- /.row -->
      
        <div class="row">
          <div>
              
            <h3>Addresses</h3>
            <address>
              <strong>{{i.genre}} {{i.nom}}</strong><br>
              {{i.adresse}}<br>
              {{i.cp }} {{i.ville }} {{i.etatprov }} {{i.pays }}<br/>

            </address>
           
          </div>
         </div><!-- /.row -->


{% endblock %}