{% extends "::SousSite/Admin/baseAdmin.html.twig" %}

{% block content %}
    
    <div class="row">
        
          <div class="col-lg-12">
            <h1>Formation</h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('soleil_sous_site_accueil_admin') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
              <li class="active"><i class="fa fa-align-justify"></i> Formation</li>
            </ol>
          </div>
        
  </div><!-- /.row --> 
       
  <div class="row">
        <div class="col-lg-6">
            <a href="{{ path('soleil_formation_ajouter_admin') }}">Ajouter une formation</a>
            <h2>Listes des formations</h2>
                      
            <div class="table-responsive">
              <table class="table table-hover table-striped ">
                  
                <thead>
                  <tr>
                    <th>Formations</th>
                    <th></th>
                    <th></th>
                    <th></th>
                  </tr>
                </thead>
                
                <tbody>
                  <tr>

                   {% for f in formations %}
                  
                        <tr>
                            <td><a href="{{ path('soleil_formation_voir_admin', {'slug':f.slug}) }}">{{ f.titreFr }}</a></td>
                            <td></td>
                            <td></td>
                            <td><a href="{{ path('soleil_formation_modifier_admin', {'slug':f.slug}) }}">Modifier</a> - <a href="{{ path('soleil_formation_supprimer_admin', {'slug':f.slug}) }}">supprimer</a></td>
                        </tr>
                        
                   {% endfor %}
                  
                </tbody>
                
              </table>
            </div>
          </div>
        </div><!-- /.row -->

{% endblock %}