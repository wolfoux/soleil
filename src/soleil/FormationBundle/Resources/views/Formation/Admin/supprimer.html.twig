{% extends "::SousSite/Admin/baseAdmin.html.twig" %}

{% block content %}

    <div class="row">
        
          <div class="col-lg-12">
            <h1>Formation</h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('soleil_sous_site_accueil_admin') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
              <li><a href="{{ path('soleil_formation_accueil_admin') }}"><i class="fa fa-align-justify"></i> Formation</a></li>
              <li class="active">Supprimer une formation</li>
            </ol>
          </div>
        
  </div><!-- /.row --> 

    <p>
    Etes-vous certain de vouloir supprimer cette Formation "{{ formation.titreFr }}" ?
    </p>

    <form action="{{ path('soleil_formation_supprimer_admin', {'slug': formation.slug}) }}" method="post">

    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
    </form>
    
{% endblock %}