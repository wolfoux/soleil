{% extends "::SousSite/Admin/baseAdmin.html.twig" %}

{% block content %}
    
  <div class="row">
        
          <div class="col-lg-12">
            <h1>Article</h1>
            <ol class="breadcrumb">
              <li><a href="{{ path('soleil_sous_site_accueil_admin') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
              <li class="active"><i class="fa fa-pencil"></i> Article</li>
            </ol>
          </div>
        
  </div><!-- /.row --> 
  
  <div class="row">
      <div class="col-lg-12">
        <a href="{{ path('soleil_article_ajouter_admin') }}">Ajouter un article</a>
      </div>
  </div>
  
  <div class="row">
      
        <div class="col-lg-6">
            
            <h2>Listes des Articles</h2>
                      
            <div class="table-responsive">
              <table class="table table-hover table-striped ">
                  
                <thead>
                  <tr>
                    <th>Articles</th>
                    <th></th>
                    <th></th>
                    <th></th>
                  </tr>
                </thead>
                
                <tbody>
                  <tr>

                   {% for article in articles %}
                  
                        <tr>
                            <td><a href="{{ path('soleil_article_voir_admin', {'slug': article.slug} ) }}">{{ article.titreFr}}</a></td>
                            <td></td>
                            <td></td>
                            <td><a href="{{ path('soleil_article_modifier_admin', {'slug': article.slug} ) }}">Modifier</a> - <a href="{{ path('soleil_article_supprimer_admin', {'slug': article.slug} ) }}">Supprimer</a></td>
                        </tr>
                        
                   {% endfor %}
                  
                </tbody>
                
              </table>
            </div>   
            
          </div>
      
          <div class="col-lg-6">

            <h2>Listes des Articles vidéo</h2>
                      
            <div class="table-responsive">
              <table class="table table-hover table-striped ">
                  
                <thead>
                  <tr>
                    <th>Articles Vidéo</th>
                    <th></th>
                    <th></th>
                    <th></th>
                  </tr>
                </thead>
                
                <tbody>
                  <tr>

                   {% for article in articlesVideo %}
                  
                        <tr>
                            <td><a href="{{ path('soleil_article_voir_admin', {'slug': article.slug} ) }}">{{ article.titreFr}}</a></td>
                            <td></td>
                            <td></td>
                            <td><a href="{{ path('soleil_article_modifier_admin', {'slug': article.slug} ) }}">Modifier</a> - <a href="{{ path('soleil_article_supprimer_admin', {'slug': article.slug} ) }}">Supprimer</a></td>
                        </tr>
                        
                   {% endfor %}
                  
                </tbody>
                
              </table>
            </div>
            
          </div>
      
        </div><!-- /.row -->

{% endblock %}