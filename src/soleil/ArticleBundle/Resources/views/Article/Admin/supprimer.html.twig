{% extends "::SousSite/Admin/baseAdmin.html.twig" %}

{% block content %}

    <div class="row">

              <div class="col-lg-12">
                <h1>Agenda</h1>
                <ol class="breadcrumb">
                  <li><a href="{{ path('soleil_sous_site_accueil_admin') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
                  <li><a href="{{ path('soleil_article_accueil_admin') }}"><i class="fa fa-pencil"></i></i> Article</a></li>
                  <li class="active">Suprimer un Article</li>
                </ol>
              </div>

      </div><!-- /.row -->

    <p>
    Etes-vous certain de vouloir supprimer cette article "{{
    article.titreFr }}" ?
    </p>

    <form action="{{ path('soleil_article_supprimer_admin', {'slug': article.slug}) }}" method="post">

    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
    </form>
    
{% endblock %}